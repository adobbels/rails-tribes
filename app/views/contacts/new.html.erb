<div class="containerprof" style="background-image: url('http://res.cloudinary.com/dwkqph9as/image/upload/v1511970291/BannerImage_vp7iqa.jpg');">
  <div class="containerformprofile">
    <div class="row" style="width: 60vh">
      <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
        <div class="col-xs-12 col-md-6">
          <%= f.input :first_name, :required => true %>
          <%= f.input :last_name, :required => true %>
          <%= f.input :phone_number, :required => true %>
          <%= f.input :email, :required => true %>
        </div>
        <div class="col-xs-12 col-md-6">
          <%= f.input :message, :as => :text, :required => true %>
          <%= f.button :submit, 'Send message', class:"btn btn-primary" %>
        </div>
      <%end%>
    </div>
  </div>
</div>


