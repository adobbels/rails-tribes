<div class="container">
  <div class="title" style="text-align: center; height:30px; margin-top: 35px">
    <i class="fa fa-pencil fa-5x" aria-hidden="true"><h2>Please, write your message !</h2></i>
  </div>
  <div class="containerprof" >
<div class="containerformprofile" style="padding: 30px;">
  <div class="row" style="height: 350px;">
    <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
      <div class="col-xs-12 col-md-6" style="padding: 30px;">
        <%= f.input :first_name, :required => true, input_html: {style: 'height:35px;'} %>
        <%= f.input :last_name, :required => true, input_html: {style: 'height:35px;'} %>
        <%= f.input :phone_number, :required => true , input_html: {style: 'height:35px;'}%>
        <%= f.input :email, :required => true, input_html: {style: 'height:35px;'} %>
      </div>
      <div class="col-xs-12 col-md-6" style="padding: 30px;">
        <%= f.input :message, :as => :text, :required => true, input_html: {style: 'height:200px;'} %>
        <%= f.button :submit, 'Send message', class:"btn btn-primary" %>
      </div>
    <%end%>
  </div>
</div>
</div>
</div>

