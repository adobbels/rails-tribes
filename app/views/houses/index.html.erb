<div class="banner-index-house" style="background-image: url('http://res.cloudinary.com/dwkqph9as/image/upload/v1512565241/Luxembourg_Pont_Adolphe_wdj5oc.jpg');">

    <h1 class="display-2 text-bold mb-2">LILLE</h1>

</div>

<div class="house-main">
  <div class='container'>
    <div class="row">
      <% @houses.each do |house| %>
        <div class="col-lg-4 col-md-6 col-xs-12">
          <%= render "shared/house_card", house: house %>
        </div>

      <% end %>
    </div>
  </div>

   <div class="map-index">
      <div id="map" style="width: 100%; height: 100%;"></div>

        <% content_for(:after_js) do %>
          <%= javascript_tag do %>
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @markers.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
          handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
            }
          });
          <% end %>
        <% end %>
    </div>

</div>

