<%= simple_form_for(@profile) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :address %>
  <div class="row">
    <div class="col-xs-6">
      <%= f.input :post_code %>
    </div>
    <div class="col-xs-6">
      <%= f.input :city %>
    </div>
  </div>
  <%= f.input :phone_number %>
  <%= f.input :birthday, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year - 12,
                              order: [:day, :month, :year] %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit %>
<% end %>

