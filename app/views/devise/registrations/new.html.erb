

<div class="container ">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
        <h4 class="titre-login margin-bottom-1x">Please, Sign-Up !</h4>
        <div class="form-group input-group">
          <%= f.input :email, required: false, autofocus: true , class: "form-control", placeholder: "email@exemple.com" %>
        </div>
        <div class="form-group input-group">
          <%= f.input :password, required: true , hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control", placeholder: "*************"%>
        </div>
        <div class="form-group input-group">
          <%= f.input :password_confirmation, required: true , class: "form-control", placeholder: "*************"%>
        </div>
        <div class="remeber-forgot">
          <div class="form-group input-group remerber-me">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-group input-group forgot-password">
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign-in", class: "btn btn-primary margin-bottom-none" %>
        </div>
          <br>
          <br>
      </div>
    <% end %>
  </div>
</div>
