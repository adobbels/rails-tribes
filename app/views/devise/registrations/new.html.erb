<div class="title" style="text-align: center; height:30px; margin-top: 100px;">
  <i class="fa fa-sign-in fa-5x" aria-hidden="true"><h2>Please, Sign-Up !</h2></i>
</div>

<div class="containerprof" >
  <div class="containerformprofile" style="text-align: center;">
    <div class="row" style=" height: 380px;">
      <div class="col-xs-12 col-md-12">

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true , input_html: {style: 'height:35px;'}%>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: {style: 'height:35px;'} %>
            <%= f.input :password_confirmation, required: true , input_html: {style: 'height:35px;'}%>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
