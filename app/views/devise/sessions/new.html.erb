
<div class="title" style="text-align: center; height:30px; margin-top: 100px;">
  <i class="fa fa-sign-in fa-5x" aria-hidden="true"><h2>Please, Log-In !</h2></i>
</div>

<div class="containerprof" >

  <div class="containerformprofile" style="text-align: center; margin-top: 0;">

    <div class="row" style=" height: 350px;">
      <div class="col-xs-12 col-md-12">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true , input_html: {style: 'height:35px;'}%>
            <%= f.input :password, required: false , input_html: {style: 'height:35px;'}%>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>


        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

