<div class="container bloc-log ">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <!--  <h4 class="titre-login margin-bottom-1x">Or using form below</h4> -->
          <div class="form-group input-group">
            <%= f.input :email, required: false, autofocus: true , class: "form-control", placeholder: "email@exemple.com" %>
          </div>
          <div class="form-group input-group">
            <%= f.input :password, required: false , class: "form-control", placeholder: "*************"%>
          </div>
          <div class="remeber-forgot">
            <div class="form-group input-group remerber-me">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-group input-group forgot-password">
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            </div>
          </div>
          <div class="form-actions ">
            <%= f.button :submit, "Log in", class: "btn btn-primary margin-bottom-none" %>
          </div>
          <div class="links">
     <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name) %><br />
<% end -%>
      </div>
        <% end %>
              <br>
              <br>
      </div>
    </div>
  </div>
</div>





